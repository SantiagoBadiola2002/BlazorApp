@page "/infoOficinas"
@using BlazorApp.Models
@using BlazorApp.Infraestructure.Data
@inject IClienteRepository ClienteRepository

<h3>Lista de Clientes</h3>

@if (clientes == null)
{
    <p>Cargando...</p>
}
else if (clientes.Count == 0)
{
    <p>No hay clientes disponibles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Cédula</th>
                <th>Fecha de Registro</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in clientes)
            {
                <tr>
                    <td>@cliente.Cedula</td>
                    <td>@cliente.FechaRegistro.ToShortDateString()</td>
                    <td>@cliente.Estado.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IList<Cliente> clientes;

    protected override async Task OnInitializedAsync()
    {
        clientes = await Task.Run(() => ClienteRepository.ObtenerClientesEnEspera());
    }
}
