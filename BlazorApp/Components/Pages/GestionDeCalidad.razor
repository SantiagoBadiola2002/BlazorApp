@page "/gestionDeCalidad"
@rendermode InteractiveServer
@using BlazorApp.Components.Pages // Asegúrate de que sea la ruta correcta para tus componentes

<RadzenCard Variant="Variant.Outlined" Style="text-align: center; margin-bottom: 1rem;">
    <h1>Panel de Reportes</h1>
</RadzenCard>

<RadzenCard Variant="Variant.Outlined">
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Gap="1rem">
        <RadzenButton Text="Mes de Trámite" Click="@(() => SetActivePage("MesTramite"))" Class="nav-link link-style" />
        <RadzenButton Text="Flujo de Cliente" Click="@(() => SetActivePage("FlujoCliente"))" Class="nav-link link-style" />
        <RadzenButton Text="Listado de Atención" Click="@(() => SetActivePage("ListadoAtenciones"))" Class="nav-link link-style" />
        <RadzenButton Text="Tiempo Atención" Click="@(() => SetActivePage("TiempoAtencion"))" Class="nav-link link-style" />
    </RadzenStack>
</RadzenCard>

<!-- Renderizado condicional de las páginas -->
<RadzenCard Variant="Variant.Outlined" Style="margin-top: 2rem;">
    @if (activePage == "MesTramite")
    {
        <MesTramite />
    }
    else if (activePage == "FlujoCliente")
    {
        <FlujoCliente />
    }
    else if (activePage == "ListadoAtenciones")
    {
        <ListadoAtenciones />
    }
    else if (activePage == "TiempoAtencion")
    {
        <TiempoAtencionXOperario />
    }
</RadzenCard>

<style>
    .link-style {
        font-size: 1.2rem; /* Tamaño de letra ligeramente más grande */
        color: #009879; /* Color verde para el texto */
        text-decoration: none; /* Sin subrayado */
        font-weight: bold;
    }

    .link-style:hover {
        color: #1b6ec2; /* Un tono de verde más oscuro al pasar el cursor */
    }
</style>

@code {
    private string activePage = "FlujoCliente"; // Página activa inicial

    private void SetActivePage(string page)
    {
        activePage = page;
    }
}
